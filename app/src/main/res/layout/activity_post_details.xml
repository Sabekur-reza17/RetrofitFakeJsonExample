<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PostDetailsActivity">

    <TextView
        android:id="@+id/post_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_view_background"
        android:gravity="center"
        android:text="post id here"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044"></TextView>

    <TextView
        android:id="@+id/post_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_view_background"
        android:gravity="center"
        android:text="post uesr id here"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_id"
        app:layout_constraintVertical_bias="0.045"></TextView>

    <TextView
        android:id="@+id/post_title_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_view_background"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:text="post title here"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_user_id"
        app:layout_constraintVertical_bias="0.11"></TextView>

    <TextView
        android:id="@+id/post_body_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test_view_background"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:text="post boyd here"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_title_details"
        app:layout_constraintVertical_bias="0.298"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>